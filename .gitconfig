[core]
	editor = nano
	pager = diff-so-fancy | bat -p
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[push]
	default = simple
[submodule]
	recurse = true
[user]
	name = Kevin Nguy
[alias]
	cm = commit -m
	cam = !git add -A && git commit -am
	amend = commit --amend --no-edit
